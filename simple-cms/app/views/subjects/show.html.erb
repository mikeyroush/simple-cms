<%= link_to "<< Back to List", subjects_path, class: 'back-link' %>

<div class="subjects show">
    <h2>Show Subject</h2>

    <table summary="Subject detail view">
        <tr>
            <th>Name</th>
            <td><%= @subject.name %></td>
        </tr>
        <tr>
            <th>Postion</th>
            <td><%= @subject.position %></td>
        </tr>
        <tr>
            <th>Visible?</th>
            <td><%= status_tag(@subject.visible) %></td>
        </tr>
        <tr>
            <th>Page Count</th>
            <td><%= pluralize(@subject.pages.count, 'page') %></td>
        </tr>
        <tr>
            <th>Created</th>
            <td><%= @subject.created_at.to_s(:long) %></td>
        </tr>
        <tr>
            <th>Updated</th>
            <td><%= @subject.updated_at.to_s(:long) %></td>
        </tr>
    </table>

</div>