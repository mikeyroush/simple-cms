<%= link_to "<< Back to List", pages_path, class: 'back-link' %>

<div class="page delete">
    <h2>Delete page</h2>

    <%= form_for( @page, method: 'delete' ) do |f| %>

    <p>Are you sure you want to permanently delete this page?</p>
    <p><%= @page.name %></p>

    <div class="form-buttons">
        <%= f.submit "Delete Page", disable_with: 'Deleting Page...' %>
    </div>

    <% end %>
</div>